<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>*** \(%logger{30}\) %msg%n</pattern>
        </encoder>
    </appender>
    <root level="${log.root:-info}">
        <appender-ref ref="STDOUT" />
    </root>
    <logger name="scala.slick.ast.opt.Optimizer" level="${log.opt:-info}" />
    <logger name="scala.slick.ast.opt.ReconstructProducts" level="${log.optRP:-info}" />
    <logger name="scala.slick.ast.opt.Columnizer" level="${log.optCol:-info}" />
    <logger name="scala.slick.ast.opt.Relational" level="${log.optRel:-info}" />
    <logger name="scala.slick.ast.opt.Inliner" level="${log.optInline:-info}" />
    <logger name="scala.slick.ast.opt" level="${log.optFull:-info}" />
    <logger name="scala.slick.session" level="${log.session:-info}" />
</configuration>
