<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>*** \(%logger{30}\) %msg%n</pattern>
        </encoder>
    </appender>
    <root level="${log.root:-info}">
        <appender-ref ref="STDOUT" />
    </root>
    <logger name="scala.slick.ast.opt.Optimizer" level="${log.opt:-info}" />
    <logger name="scala.slick.ast.opt.ReconstructProducts" level="${log.opt.rp:-info}" />
    <logger name="scala.slick.ast.opt.Columnizer" level="${log.opt.col:-info}" />
    <logger name="scala.slick.ast.opt.PathRewriter" level="${log.opt.path:-info}" />
    <logger name="scala.slick.ast.opt.Relational" level="${log.opt.rel:-info}" />
    <logger name="scala.slick.ast.opt.Inliner" level="${log.opt.in:-info}" />
    <logger name="scala.slick.ast.opt" level="${log.opt.full:-info}" />
    <logger name="scala.slick.session" level="${log.session:-info}" />
</configuration>
